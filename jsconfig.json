{
  "include": ["**/*.js", "**/*.jsx"],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2019"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ES2019",
    "strict": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"],
      "@api/*": ["./app/api/*"],
      "@comp/*": ["./app/components/*"],
      "@ctx/*": ["./app/context/*"],
      "@hook/*": ["./app/hooks/*"],
      "@routes/*": ["./app/routes/*"],
      "@util/*": ["./app/utilities/*"],
      "@css/*": ["./app/styles/*"]
    },
    "noEmit": true
  }
}
